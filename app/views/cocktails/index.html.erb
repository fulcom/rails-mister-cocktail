<h1 class="p-3 m-3">List of all cocktails</h1>

<ul>
<% @cocktails.each do |cocktail| %>
  <li><%= link_to cocktail.name, cocktail_path(cocktail) %> <%= cl_image_tag "#{cocktail.photo}", height: 100, width: 100, crop: :fill %>
</li>
<% end %>
</ul>

<button type="button" class="btn btn-outline-primary"><%= link_to("Create a new cocktail", new_cocktail_path)%></button>

